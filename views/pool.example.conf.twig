{% set fpm_version = fpm_version|default('5') %}
[{{ username }}]

user = {{ username }}
group = {{ username }}

listen = /var/run/php{{ fpm_version }}-fpm-{{ username }}.sock

listen.owner = {{ webserver_group }}
listen.group = {{ webserver_group }}
# Restrict permissions to user and group only
listen.mode = 0660

listen.allowed_clients = 127.0.0.1

pm = dynamic

pm.max_children = 5

pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

chdir = /

php_admin_value[error_log] = {{ rootPath }}/log/fpm-php.log
php_admin_flag[log_errors] = on
php_admin_value[memory_limit] = 128M
